# Configuración para el sistema de mototaxis
DirectoryIndex index.html

# Habilitar CORS para la API
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "https://hclicknbusiness.com"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Proteger archivos JSON de acceso directo
<Files "*.json">
    Order Allow,Deny
    Deny from all
</Files>

# Permitir acceso a la API
<Directory "api">
    <Files "*.php">
        Order Allow,Deny
        Allow from all
    </Files>
</Directory>

# Configuración de cache para mejor rendimiento
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
